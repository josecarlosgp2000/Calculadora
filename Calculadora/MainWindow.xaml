<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Icon="Contenido/shaq.ico"
        Title="Calculadora" Height="450" Width="800">


    <UniformGrid Rows="5" Columns="3" FirstColumn="2">

        <Viewbox x:Name="numerosViewBox"></Viewbox>
        <Button Margin="10" Click="Button_Click" Tag="1" BorderBrush="#FF170000" Background="#FFFFFCFC">1</Button>
        <Button Margin="10" Click="Button_Click" Tag="2" BorderBrush="#FF170000" Background="#FFFFFCFC">2</Button>
        <Button Margin="10" Click="Button_Click" Tag="3" BorderBrush="#FF170000" Background="#FFFFFCFC">3</Button>
        <Button Margin="10" Click="Button_Click" Tag="4" BorderBrush="#FF170000" Background="#FFFFFCFC">4</Button>
        <Button Margin="10" Click="Button_Click" Tag="5" BorderBrush="#FF170000" Background="#FFFFFCFC">5</Button>
        <Button Margin="10" Click="Button_Click" Tag="6" BorderBrush="#FF170000" Background="#FFFFFCFC">6</Button>
        <Button Margin="10" Click="Button_Click" Tag="7" BorderBrush="#FF170000" Background="#FFFFFCFC">7</Button>
        <Button Margin="10" Click="Button_Click" Tag="8" BorderBrush="#FF170000" Background="#FFFFFCFC">8</Button>
        <Button Margin="10" Click="Button_Click" Tag="9" BorderBrush="#FF170000" Background="#FFFFFCFC">9</Button>
        <Button Margin="10" Click="Button_Click" Tag="0" BorderBrush="#FF170000" Background="#FFFFFCFC">0</Button>
    </UniformGrid>
   
</Window>
